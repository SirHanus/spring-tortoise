<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="1" author="Pat">
        <createTable tableName="transaction">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="amount" type="decimal(10,2)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Kub">
        <addColumn tableName="transaction">
            <column name="source_account_id" type="bigint"/>
            <column name="target_account_id" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="transaction"
                                 baseColumnNames="source_account_id"
                                 constraintName="fk_transaction_source_account"
                                 referencedTableName="account"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="transaction"
                                 baseColumnNames="target_account_id"
                                 constraintName="fk_transaction_target_account"
                                 referencedTableName="account"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>