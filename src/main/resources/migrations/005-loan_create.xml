<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="1" author="Kubko">
        <createTable tableName="loan">
            <column name="id" type="uuid" valueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="attached_account_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="period" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Ivo">
        <addForeignKeyConstraint baseTableName="loan"
                                 baseColumnNames="attached_account_id"
                                 constraintName="fk_loan_account"
                                 referencedTableName="account"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
